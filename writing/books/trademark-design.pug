block main-content
    - var bookSubhead           = '1951, unpublished'

    - var library               = 'yes'
    - var libraryLink           = 'CHANGE_ME'
    - var abe                   = 'yes'
    - var abeLink               = 'CHANGE_ME'
    - var amazon                = 'yes'
    - var amazonLink            = 'CHANGE_ME'
    - var modernism101          = 'no'
    - var modernism101Link      = 'CHANGE_ME'
    - var barnesnoble           = 'no'
    - var barnesnobleLink       = 'CHANGE_ME'
    - var ebay                  = 'yes'
    - var ebayLink              = 'CHANGE_ME'

    - var nextType              = 'Book'
    - var nextTitle             = 'Thoughts on Design, 2nd Edition'
    - var nextDate              = '1951'
    - var nextDescription       = 'The second edition, including new work samples and edited text.'
    - var nextLink              = '/writing/books/thoughts-on-design-2nd-edition.html'

    - var relatedItemLink1      = '/writing/books/the-trademarks-of-paul-rand.html'
    - var relatedItemTitle1     = 'The Trademarks of Paul Rand — A Selection'
    - var relatedItemFootnote1  = 'First (only) edition; limited to 450 copies'

    - var relatedItemLink2      = '/writing/books/a-paul-rand-miscellany.html'
    - var relatedItemTitle2     = 'A Paul Rand Miscellany'
