    - var relatedItemLink3      = '/writing/books/some-thoughts-some-tribulations.html'
    - var relatedItemTitle3     = 'Some Thoughts… and Some Tribulations about the Design of a Logo'
    - var relatedItemFootnote3  = '1991'

    - var imageCarouselTitle    = 'View Inside'
    - var imageCarouselSubtitle = 'CHANGE_ME'
