                    if dates == 'CHANGE_ME'
                    else
                        p!= dates

                    //- /*==============================  PROJECTS  ==============================*/
                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo",
                        "top","1","1",
                        {SM: "https://assets.paulrand.design/Works/Consolidated%20Cigar%20Corporation/Consolidated-Cigar-Corporation-1959.svg", LG:"https://assets.paulrand.design/Works/Consolidated%20Cigar%20Corporation/Consolidated-Cigar-Corporation-1959.svg", title: "", footnote: "1959"}
                        )

                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Annual Report, 1954",
                        "top","1","1",
                        {SM: "https://assets.paulrand.design/Works/Consolidated%20Cigar%20Corporation/Annual%20Report%201954/Web/Consolidated%20Cigar%20Corporation%20Annual%20Report%201954-970.jpg", LG:"https://assets.paulrand.design/Works/Consolidated%20Cigar%20Corporation/Annual%20Report%201954/Web/Consolidated%20Cigar%20Corporation%20Annual%20Report%201954.jpg", title: "", footnote: ""}
