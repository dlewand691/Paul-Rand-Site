extends ../__MIXINS/_layout-default.pug
include ../__MIXINS/_mixins.pug

block vars
    - var pageTitle = 'Servador'
    - var bodyID    = 'work'
    - var bodyClass = ''

block main-content
    - var dates     = '1996'
    - var nextType  = 'Client'
    - var nextTitle = 'Shell Oil'
    - var nextLink  = 'Shell-Oil'


    //- ==========  BODY  ==========
    .cd-main-content
        .grid-container
            .grid-x.grid-margin-x.align-center.small-mb4
                .small-12.cell.text-center
                    //- /*==============================  CLIENT  ==============================*/
                    h1.text-center.small-mb2.medium-mb3.large-mb3.reveal-enter-bottom!= pageTitle
                    if dates == 'CHANGE_ME'
                    else
                        p!= dates

                    //- /*==============================  PROJECTS  ==============================*/
                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo",
                        "top","1","1",
                        {SM: "https://assets.paulrand.design/Works/Servador/Servador-1996.svg", LG:"https://assets.paulrand.design/Works/Servador/Servador-1996.svg", title: "", footnote: ""}
                        )

                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo Sketches",
                        "top","2","2",
                        {SM: "https://assets.paulrand.design/Works/Servador/Web/Servador%20sketch%2001-800.jpg", LG:"https://assets.paulrand.design/Works/Servador/Web/Servador%20sketch%2001.jpg", title: "", footnote: ""},
                        {SM: "https://assets.paulrand.design/Works/Servador/Web/Servador%20sketch%2002-800.jpg", LG:"https://assets.paulrand.design/Works/Servador/Web/Servador%20sketch%2002.jpg", title: "", footnote: ""}
                        )

            //- /*-----  End of BODY  ------*/


        include ../__MIXINS/_include-next-work.pug

        include ../__MIXINS/_include-social-media.pug