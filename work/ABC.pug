                    if dates == 'CHANGE_ME'
                    else
                        p!= dates

                    //- /*==============================  PROJECTS  ==============================*/
                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo",
                        "middle", "1","1",
                        {SM: "https://assets.paulrand.design/Works/American%20Broadcasting%20Company%20%28ABC%29/ABC-1962.svg", LG:"https://assets.paulrand.design/Works/American%20Broadcasting%20Company%20%28ABC%29/ABC-1962.svg", title: "", footnote: ""}
                        )

                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Advertising",
                        "top", "3", "2",
                        {SM: "https://assets.paulrand.design/Works/American%20Broadcasting%20Company%20%28ABC%29/Web/ABC%2001-450.jpg", LG:"https://assets.paulrand.design/Works/American%20Broadcasting%20Company%20%28ABC%29/Web/ABC%2001.jpg", title: "", footnote: ""},
