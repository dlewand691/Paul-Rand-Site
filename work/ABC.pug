    - var bodyID    = 'work'
    - var bodyClass = ''

block main-content
    - var dates           = 'CHANGE_ME'
    - var nextType        = 'Client'
    - var nextTitle       = 'Accent Software International'
    - var nextLink        = 'Accent-Software-International'

    //- ==========  BODY  ==========
    .cd-main-content
        .grid-container
            .grid-x.grid-margin-x.align-center.small-mb4
                .small-12.cell.text-center
                    //- /*==============================  CLIENT  ==============================*/
