extends ../__MIXINS/_layout-default.pug
include ../__MIXINS/_mixins.pug

block vars
    - var pageTitle = 'Enron'
    - var bodyID    = 'work'
    - var bodyClass = ''

block main-content
    - var dates     = 'CHANGE_ME'
    - var nextType  = 'Client'
    - var nextTitle = 'Esquire Magazine'
    - var nextLink  = 'Esquire'


    //- ==========  BODY  ==========
    .cd-main-content
        .grid-container
            .grid-x.grid-margin-x.align-center.small-mb4
                .small-12.cell.text-center
                    //- /*==============================  CLIENT  ==============================*/
                    h1.text-center.small-mb2.medium-mb3.large-mb3(data-aos="fade-up")!= pageTitle
                    if dates == 'CHANGE_ME'
                    else
                        p!= dates

                    //- /*==============================  PROJECTS  ==============================*/
                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo",
                        "top","1","1",
                        {SM: "https://assets.paulrand.design/Works/Enron/Enron-1996.svg", LG:"https://assets.paulrand.design/Works/Enron/Enron-1996.svg", title: "", footnote: ""}
                        )

                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Annual Report, 1996",
                        "top","1","1",
                        {SM: "https://assets.paulrand.design/Works/Enron/Enron%20Annual%20Report%201996/Web/Enron%20Annual%20Report%201996-970.jpg", LG:"https://assets.paulrand.design/Works/Enron/Enron%20Annual%20Report%201996/Web/Enron%20Annual%20Report%201996.jpg", title: "", footnote: ""}
                        )

                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Logo Sketches",
                        "middle", "1", "1",
                        {SM: "https://assets.paulrand.design/Works/Enron/Logo%20Sketches/Web/Enron%20Logo%20Sketches-970.jpg", LG:"https://assets.paulrand.design/Works/Enron/Logo%20Sketches/Web/Enron%20Logo%20Sketches.jpg", title: "", footnote: "Image courtesy of Wright Auction House, Chicago, IL."}
                        )


            //- /*-----  End of BODY  ------*/


        include ../__MIXINS/_include-next-work.pug

        include ../__MIXINS/_include-social-media.pug