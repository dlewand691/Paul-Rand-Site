extends ../__MIXINS/_layout-default.pug
include ../__MIXINS/_mixins.pug

block vars
    - var pageTitle = 'Fortune Magazine'
    - var bodyID    = 'work'
    - var bodyClass = ''

block main-content
    - var dates     = 'CHANGE_ME'
    - var nextType  = 'Client'
    - var nextTitle = 'Frigiking'
    - var nextLink  = 'Frigiking'


    //- ==========  BODY  ==========
    .cd-main-content
        .grid-container
            .grid-x.grid-margin-x.align-center.small-mb4
                .small-12.cell.text-center
                    //- /*==============================  CLIENT  ==============================*/
                    h1.text-center.small-mb2.medium-mb3.large-mb3.reveal-enter-bottom!= pageTitle
                    if dates == 'CHANGE_ME'
                    else
                        p!= dates

                    //- /*==============================  PROJECTS  ==============================*/
                    +galleryItem-blockGrid(
                        "DIVIDER_yes",
                        "Cover study",
                        "top", "1", "1",
                        {SM: "https://assets.paulrand.design/Works/Fortune%20Magazine/Web/Fortune%20Magazine%20cover%20study%2001-970.jpg", LG:"https://assets.paulrand.design/Works/Fortune%20Magazine/Web/Fortune%20Magazine%20cover%20study%2001.jpg", title: "", footnote: "Image courtesy of Wright auction house, Chicago, IL."}
                        )

            //- /*-----  End of BODY  ------*/


        include ../__MIXINS/_include-next-work.pug

        include ../__MIXINS/_include-social-media.pug