extends ../__MIXINS/_layout-default.pug
include ../__MIXINS/_mixins.pug

block vars
    - var pageTitle = 'Blatz Beer'
    - var bodyID    = 'work'
    - var bodyClass = ''

block main-content
    - var dates     = 'CHANGE_ME'
    - var nextType  = 'Client'
    - var nextTitle = 'Borzoi'
    - var nextLink  = 'Borzoi'


    //- ==========  BODY  ==========
    .cd-main-content
        .grid-container
            .grid-container
                .grid-x.grid-margin-x.align-center.small-mb4
                    .small-12.cell.text-center
                        //- /*==============================  CLIENT  ==============================*/
                        h1.text-center.small-mb2.medium-mb3.large-mb3(data-aos="fade-up")!= pageTitle
                        if dates == 'CHANGE_ME'
                        else
                            p!= dates

                        //- /*==============================  PROJECTS  ==============================*/
                        +galleryItem-blockGrid(
                            "DIVIDER_yes",
                            "Advertising, Continental Special",
                            "top","1","1",
                            {SM: "https://assets.paulrand.design/Works/Blatz%20Beer/Web/Blatz%20Continental%20Special-970.jpg", LG:"https://assets.paulrand.design/Works/Blatz%20Beer/Web/Blatz%20Continental%20Special.jpg", title: "", footnote: ""}
                            )

                        +galleryItem-blockGrid(
                            "DIVIDER_yes",
                            "Beer Stein",
                            "top","1", "1",
                            {SM: "https://assets.paulrand.design/Works/Blatz%20Beer/Web/Blatz%20Beer%20Stein-970.jpg", LG:"https://assets.paulrand.design/Works/Blatz%20Beer/Web/Blatz%20Beer%20Stein.jpg", footnote:"Image courtesy of Steven Heller", title: "", footnote: ""}
                            )

                //- /*-----  End of BODY  ------*/


        include ../__MIXINS/_include-next-work.pug

        include ../__MIXINS/_include-social-media.pug